@model Domain.Dto.ReserveSpaceDto

@{ 
    ViewData["Title"] = "Reserve Space";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reserve selected space:</h1>
<hr />
<link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

<div class="row">
     <div class="col-4 m-auto">
         <form asp-action="ReserveSpace" method="post">
             <input type="hidden" asp-for="SpaceId" />
             <div class="form-group">
                 <label asp-for="SelectedSpace.name"></label>
                 <input disabled asp-for="SelectedSpace.name" class="form-control" />
             </div>

             <div class="form-group">
                 <label asp-for="Quantity"></label>
                 <input asp-for="Quantity" class="form-control" />
             </div>

             <div class="form-group">
                 <label asp-for="DateFrom"></label>
                 <input asp-for="DateFrom" class="form-control" />
             </div>

             <div class="form-group">
                 <label asp-for="DateTo"></label>
                 <input asp-for="DateTo" class="form-control" />
             </div>

             <div class="form-group">
                 
                 <input type="submit" value="Save" class="btn btn-primary" />
             </div>
         </form>
     </div>
</div>
