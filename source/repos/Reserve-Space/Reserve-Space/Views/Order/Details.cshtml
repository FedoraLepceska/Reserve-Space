@model Domain.Models.Order

<h2 class="mb-3 ml-2">Order Details For: <a class="btn btn-success font-weight-bold text-white">@Model.OrderedBy.Email</a></h2>

<div class="container-fluid">

    @for (int i = 0; i < Model.Spaces.Count; i++)
    {
        var item = Model.Spaces.ElementAt(i).SelectedSpace;

        //otvori red
        if (i % 3 == 0)
        {
            @: <div class="row mb-3">
            }


            <div class="col-4">
                <div class="card" style="width: 20rem; height: 35rem">
                    <div class="card-body m-1 p-2">
                        <h3 class="card-title">@item.name</h3>
                        <h6><i>Price:</i> <b>@item.price MKD</b></h6>
                    </div>

                </div>
            </div>


            //zatvori red
            if (i % 3 == 2)
            {
            @: </div>
        }
    }

</div>
