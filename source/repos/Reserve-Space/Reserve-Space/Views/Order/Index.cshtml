@model List<Domain.Models.Order>


<h1 class="mb-3 ml-2">All Orders:</h1>

<div class="container">

    <div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">Number of Spaces</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count.Equals(0))
                {
                    <tr>
                        <td colspan="6" style="font-weight: bold; text-transform: uppercase; text-align: center;">No Orders Right Now</td>
                    </tr>
                }

                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.OrderedBy.Email</td>

                        @if (item.Spaces.Count != 0)
                        {
                            <td>@item.Spaces.Count</td>
                        }
                        @if (item.Spaces.Count == 0)
                        {
                            <td class="text-center font-weight-bold text-uppercase">No Spaces in this Order</td>
                        }


                        <td colspan="3" class="text-center">
                            @if (item.Spaces.Count != 0)
                            {
                                <a class="btn btn-outline-dark" asp-route-orderId="@item.Id" asp-action="Details">View Order</a>
                                <a class="btn btn-outline-info" asp-route-orderId="@item.Id" asp-action="CreateInvoice">Create Invoice</a>
                            }
                        </td>
                    </tr>

                }


            </tbody>
        </table>
    </div>
</div>
